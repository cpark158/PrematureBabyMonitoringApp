<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#D2E5ED">
    <ImageView
            android:layout_width="199dp"
            android:layout_height="209dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imageView"
            android:contentDescription="@string/babyPic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="150dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/editTextTime"
            android:importantForAutofill="no"
            tools:targetApi="o"
            android:hint="@string/type"
            android:text="@string/timeOfBirth" app:layout_constraintTop_toBottomOf="@+id/editTextDate"
            app:layout_constraintBottom_toTopOf="@+id/editTextPhone" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/gender"
            android:ems="10"
            android:id="@+id/editGender"
            android:importantForAutofill="no"
            tools:targetApi="o"
            android:hint="@string/type"
            app:layout_constraintTop_toBottomOf="@+id/editName"
            app:layout_constraintBottom_toTopOf="@+id/editTextDate" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editTextPhone"
            android:importantForAutofill="no"
            tools:targetApi="o"
            android:hint="@string/type"
            android:text="@string/emergencyContact" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTime" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="@string/Name"
            android:ems="10"
            android:id="@+id/editName"
            android:importantForAutofill="no"
            tools:targetApi="o"
            android:hint="@string/type"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintBottom_toTopOf="@+id/editGender"
            app:layout_constraintVertical_chainStyle="packed" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:textColorLink="#AC92A6" android:textColor="#000000"
            android:textColorHint="#AC92A6"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editTextDate"
            android:importantForAutofill="no"
            tools:targetApi="o"
            android:hint="@string/type"
            android:text="@string/dateOfBirth" app:layout_constraintTop_toBottomOf="@+id/editGender"
            app:layout_constraintBottom_toTopOf="@+id/editTextTime" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <com.google.android.material.tabs.TabLayout
            android:layout_width="407dp"
            android:layout_height="58dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:tabRippleColor="#DC9382" app:tabIndicatorColor="#FFFFFF" android:background="#3F51B5"
            app:tabTextColor="#FFFFFF" app:tabSelectedTextColor="#FFFFFF"
            app:tabTextAppearance="@style/TextAppearance.AppCompat.Body2" android:id="@+id/patientSelectTabs"
            app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/basicInfo" android:id="@+id/basicInfoTab"/>

        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/healthInfo" android:id="@+id/healthTab"/>

        <com.google.android.material.tabs.TabItem
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/others" android:id="@+id/othersTab"/>
    </com.google.android.material.tabs.TabLayout>
    <Spinner
            android:layout_width="416dp"
            android:layout_height="45dp" android:id="@+id/spinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="3dp"
            app:layout_constraintBottom_toTopOf="@+id/patientSelectTabs" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.914" app:layout_constraintVertical_bias="0.484"/>
    <TextView
            android:text="@string/patientList"
            android:layout_width="147dp"
            android:layout_height="40dp" android:id="@+id/patientList"
            android:background="#00E7F3F4"
            android:textColorHint="#FFFFFF"
            android:textColorLink="#FFFFFF" android:textColor="#000000" android:textColorHighlight="#00DC9E"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/patientSelectTabs" app:layout_constraintHorizontal_bias="0.993"
            app:layout_constraintVertical_bias="1.0" android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_chart"
            android:layout_width="675dp"
            android:layout_height="265dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="113dp"
            android:layout_marginStart="113dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="594dp" android:layout_marginEnd="112dp" android:layout_marginRight="112dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="421dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>

 

